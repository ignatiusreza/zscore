{
  "name": "zscore",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "lint:eslint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:prettier": "prettier --check \"**/*.{js,jsx,ts,tsx,css,json,yml}\"",
    "lint:stylelint": "stylelint app/**/*.css",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,yml}\"",
    "test": "jest"
  },
  "dependencies": {
    "@babel/preset-react": "^7.7.0",
    "@rails/actioncable": "^6.0.0-alpha",
    "@rails/activestorage": "^6.0.0-alpha",
    "@rails/ujs": "^6.0.0-alpha",
    "@rails/webpacker": "^4.0.7",
    "babel-eslint": "^10.0.3",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "tailwindcss": "^1.1.3",
    "ts-loader": "^6.2.1",
    "typescript": "^3.6.4",
    "typescript-plugin-css-modules": "^2.0.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.22",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.3",
    "@types/react-test-renderer": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "eslint": "6.5.1",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-react": "^7.16.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "react-test-renderer": "^16.11.0",
    "stylelint": "^11.1.1",
    "stylelint-config-prettier": "^6.0.0",
    "stylelint-config-standard": "^19.0.0",
    "ts-jest": "^24.1.0",
    "webpack-dev-server": "^3.9.0"
  },
  "jest": {
    "preset": "ts-jest",
    "modulePaths": [
      "<rootDir>/app/javascript",
      "<rootDir>/node_modules"
    ],
    "testMatch": [
      "**/*_spec.[tj]s?(x)"
    ],
    "moduleNameMapper": {
      "\\.css$": "identity-obj-proxy"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "app/javascript/**/*.[tj]s?(x)"
    ],
    "coverageDirectory": "spec/coverage/javascript"
  }
}

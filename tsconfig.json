{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "app/javascript",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "plugins": [{ "name": "typescript-plugin-css-modules", "options": { "classnameTransform": "camelCaseOnly" } }],
    "sourceMap": true,
    "target": "es5",
    "jsx": "react"
  },
  "exclude": ["spec", "node_modules", "vendor", "public"],
  "compileOnSave": false
}
